<body class="login" ng-app="OOPSApp" ng-controller="personCtrl as vm">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="/Login/Index" style="text-decoration:none">
            <h1>OopsHR</h1>
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" action="/Login/Index" method="post">
            <h3 class="form-title"> @sysLanguage.LoginStrings.lbl_ContentTitle</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> @sysLanguage.LoginStrings.plc_enteranyusernameandpassword </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9"> @sysLanguage.LoginStrings.plc_username  </label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text" autocomplete="off"
                           ng-model="vm.userName"
                           placeholder="@sysLanguage.LoginStrings.plc_username"
                           name="UserName" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> @sysLanguage.LoginStrings.plc_password </label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix"
                           type="password" autocomplete="off"
                           ng-model="vm.password"
                           placeholder="@sysLanguage.LoginStrings.plc_password" name="Password" />
                </div>
            </div>
            <div class="form-actions">
                <label class="rememberme mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="remember" value="1" /> @sysLanguage.LoginStrings.plc_remember
                    <span></span>
                </label>
                <button type="button" ng-click="vm.Login()" class="btn green pull-right"> @sysLanguage.LoginStrings.btn_login </button>
            </div>
            <div class="login-options">
                <h4> @sysLanguage.LoginStrings.plc_orloginwith </h4>
                <ul class="social-icons">
                    <li>
                        <a class="facebook" data-original-title="facebook" href="javascript:;"> </a>
                    </li>
                    <li>
                        <a class="twitter" data-original-title="Twitter" href="javascript:;"> </a>
                    </li>
                    <li>
                        <a class="googleplus" data-original-title="Google Plus" href="javascript:;"> </a>
                    </li>
                    <li>
                        <a class="linkedin" data-original-title="Linkedin" href="javascript:;"> </a>
                    </li>
                </ul>
            </div>
            <div class="forget-password">
                <h4> @sysLanguage.LoginStrings.plc_forgetPassword </h4>
                <p>
                    @sysLanguage.LoginStrings.plc_noworries
                    <a href="javascript:;" id="forget-password"> @sysLanguage.LoginStrings.btn_here </a> @sysLanguage.LoginStrings.plc_toresetyourpassword
                </p>
            </div>
            <div class="create-account">
                <p>
                    @sysLanguage.LoginStrings.plc_donthaveanaccountyet &nbsp;
                    <a href="javascript:;" id="register-btn"> @sysLanguage.LoginStrings.btn_createaccount </a>
                </p>
            </div>
        </form>
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form class="forget-form" action="/Login/UserRegister" method="post">
            <h3> @sysLanguage.LoginStrings.plc_forgetpasswordQ </h3>
            <p> @sysLanguage.LoginStrings.plc_emailforresetpassword </p>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text" autocomplete="off" placeholder="@sysLanguage.LoginStrings.plc_Email" name="email" />
                </div>
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn red btn-outline"> @sysLanguage.LoginStrings.btn_Back </button>
                <button type="submit" class="btn green pull-right"> @sysLanguage.LoginStrings.btn_Submit </button>
            </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->
        <!-- BEGIN REGISTRATION FORM -->
        <form class="register-form" action="index.html" method="post">
            <h3> @sysLanguage.LoginStrings.plc_SingUp </h3>
            <p> @sysLanguage.LoginStrings.plc_enterpersoneldetails </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> @sysLanguage.LoginStrings.plc_FullName </label>
                <div class="input-icon">
                    <i class="fa fa-font"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text"
                           ng-model="vm.FullName"
                           placeholder="@sysLanguage.LoginStrings.plc_FullName" name="fullname" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> Telefon</label>
                <div class="input-icon">
                    <i class="fa fa-phone"></i>
                    <input class="form-control placeholder-no-fix"
                           type="tel"
                           ng-model="vm.Phone"
                           required placeholder="Telefon Girin" name="Phone" />
                </div>
            </div>

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9"> @sysLanguage.LoginStrings.plc_Email </label>
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text"
                           ng-model="vm.Email"
                           placeholder="@sysLanguage.LoginStrings.plc_Email" name="email" />
                </div>
            </div>

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9"> Company Name </label>
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text"
                           ng-model="vm.CompanyName"
                           placeholder="Company Name" name="CompanyName" />
                </div>
            </div>

            <p> Enter your account details below: </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> @sysLanguage.LoginStrings.plc_username </label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text"
                           autocomplete="off"
                           placeholder="@sysLanguage.LoginStrings.plc_username"
                           ng-model="vm.UserName"
                           name="username" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> @sysLanguage.LoginStrings.plc_password </label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix"
                           type="password" autocomplete="off"
                           id="@sysLanguage.LoginStrings.plc_password"
                           ng-model="vm.Password"
                           placeholder="Password" name="password" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> @sysLanguage.LoginStrings.plc_retypeyourpassword </label>
                <div class="controls">
                    <div class="input-icon">
                        <i class="fa fa-check"></i>
                        <input class="form-control placeholder-no-fix"
                               type="password" autocomplete="off"
                               placeholder="@sysLanguage.LoginStrings.plc_retypeyourpassword" name="rpassword" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="tnc" /> I agree to the
                    <a href="javascript:;">Terms of Service </a> &
                    <a href="javascript:;">Privacy Policy </a>
                    <span></span>
                </label>
                <div id="register_tnc_error"> </div>
            </div>
            <div class="form-actions">
                <button id="register-back-btn" type="button" class="btn red btn-outline"> @sysLanguage.LoginStrings.btn_Back </button>
                <button type="button"
                        id="register-submit-btn"
                        class="btn green pull-right" ng-click="vm.Register()">
                    @sysLanguage.LoginStrings.btn_register
                </button>
            </div>
        </form>
        <!-- END REGISTRATION FORM -->
    </div>
